@page
@model firmness.Pages.Files.UploadExcelModel
@{
    ViewData["Title"] = "Cargar Excel";
}

<h2>Cargar archivo Excel</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="ExcelFile">Seleccione archivo Excel:</label>
        <input type="file" asp-for="ExcelFile" class="form-control" />
        <span asp-validation-for="ExcelFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Cargar</button>
</form>

@if (Model.Errors != null && Model.Errors.Any())
{
    <div class="alert alert-warning mt-3">
        <h4>Errores encontrados:</h4>
        <ul>
            @foreach (var error in Model.Errors)
            {
                <li>@error</li>
            }
        </ul>

        @if (!string.IsNullOrEmpty(Model.LogFilePath))
        {
            <p>Ver log completo <a href="@Model.LogFilePath" target="_blank">aquí</a>.</p>
        }
    </div>
}

@if (Model.Errors != null && !Model.Errors.Any() && Model.LogFilePath == null && Model.ExcelFile != null)
{
    <div class="alert alert-success mt-3">
        Importación completada correctamente.
    </div>
}