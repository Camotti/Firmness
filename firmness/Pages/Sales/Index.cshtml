@page
@model firmness.Pages.Sales.IndexModel

@{
    ViewData["Title"] = "Sales";
}

<h1>Sales</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Client</th>
            <th>Employee</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sale)
        {
            <tr>
                <td>@item.Date.ToLocalTime().ToString("g")</td>
                <td>@item.Client?.Name</td>
                <td>@item.Employee?.Name</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.SaleId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.SaleId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.SaleId">Delete</a> |
                    <a asp-page="./DownloadPdf" asp-route-id="@item.SaleId" class="btn btn-outline-danger btn-sm">PDF</a>
                </td>
            </tr>
        }
    </tbody>
</table>
