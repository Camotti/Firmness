@page
@model firmness.Pages.Excel.ImportModel
@{
    ViewData["Title"] = "Importar Datos desde Excel";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">📥 Importar Datos desde Excel</h2>

    <form method="post" enctype="multipart/form-data" class="p-4 border rounded shadow-sm bg-light">
        <div class="mb-3">
            <label for="file" class="form-label">Selecciona un archivo Excel (.xlsx):</label>
            <input type="file" id="file" name="UploadFile" class="form-control" accept=".xlsx" required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Importar</button>
            <a asp-page="/Dashboard/Index" class="btn btn-secondary px-4 ms-2">Cancelar</a>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info text-center mt-4">
            @Model.Message
        </div>
    }
</div>
