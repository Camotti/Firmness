<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firmness</title>

    <!-- ✅ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- ✅ Estilos del sitio -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white vh-100 p-3" style="width: 250px;">
            <h3 class="text-center mb-4">Firmness</h3>
            <ul class="nav flex-column">
                <li class="nav-item mb-2"><a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a></li>
                <li class="nav-item mb-2"><a class="nav-link text-white" asp-area="" asp-page="/Privacy">Privacy</a></li>
                <li class="nav-item mb-2"><a class="nav-link text-white" asp-page="/Clients/Index">Clients</a></li>
                <li class="nav-item mb-2"><a class="nav-link text-white" asp-page="/Employees/Index">Employees</a></li>
                <li class="nav-item mb-2"><a class="nav-link text-white" asp-page="/Sales/Index">Sales</a></li>
                <li class="nav-item mb-2"><a class="nav-link text-white" asp-page="/SalesDetails/Index">Sales Details</a></li>
                <li class="nav-item mb-2"><a class="nav-link text-white" asp-page="/Products/IndexProducts">Products</a></li>
                <li class="nav-item mb-2"><a class="nav-link text-white" asp-page="/Dashboard/DashboardIndex">Dashboard</a></li>
                <li class="nav-item mb-2"><a class="nav-link text-white" asp-page="/Excel/Import">Import Excel</a></li>
            </ul>
            <hr />
            <partial name="_LoginPartial" />
        </nav>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4 bg-light">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"
            integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8="
            crossorigin="anonymous"></script>

    <!-- ✅ Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ Scripts específicos de cada página -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
